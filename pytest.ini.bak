[pytest]
# Test discovery
testpaths = tools tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Output options
addopts =
    --cov=tools
    --cov=shared
    --cov-report=term-missing
    --cov-report=html:htmlcov
    --cov-fail-under=80
    --strict-markers
    --verbose
    --tb=short
    -ra

# Async support
asyncio_mode = auto

# Markers
markers =
    unit: Unit tests using mocks
    integration: Integration tests using live APIs
    slow: Slow-running tests
    e2e: End-to-end tests
    api: Tests requiring external APIs

# Coverage
[coverage:run]
source = tools, shared
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */site-packages/*

[coverage:report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[coverage:html]
directory = htmlcov
