# =============================================================================
# AgentSwarm Tools - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to version control
# =============================================================================

# =============================================================================
# Feature Flags
# =============================================================================

# Enable mock mode for testing without real API calls
USE_MOCK_APIS=false

# Enable/disable analytics tracking
ANALYTICS_ENABLED=true

# Analytics backend type (file, database, etc.)
ANALYTICS_BACKEND=file

# Directory for analytics logs
ANALYTICS_LOG_DIR=.analytics

# =============================================================================
# Search APIs
# =============================================================================

# SerpAPI for image search
SERPAPI_KEY=your_serpapi_key_here

# Google Custom Search API
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Google Shopping API
GOOGLE_SHOPPING_API_KEY=your_google_shopping_api_key_here
GOOGLE_SHOPPING_ENGINE_ID=your_google_shopping_engine_id_here

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Amazon Product API
AMAZON_API_KEY=your_amazon_api_key_here

# =============================================================================
# Google Services
# =============================================================================

# Google Service Account JSON (for Gmail)
GOOGLE_SERVICE_ACCOUNT_JSON=your_service_account_json_here

# Google Service Account File Path (for Gmail Search)
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

# Google Calendar Service Account File
GOOGLE_CALENDAR_SERVICE_ACCOUNT_FILE=/path/to/calendar-service-account.json

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# Microsoft Services
# =============================================================================

# Microsoft Graph API Token (for OneDrive)
MS_GRAPH_TOKEN=your_ms_graph_token_here

# =============================================================================
# Workspace Integrations
# =============================================================================

# Notion API Key
NOTION_API_KEY=your_notion_api_key_here

# =============================================================================
# AI/LLM APIs
# =============================================================================

# OpenAI API Key (for code generation)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key
GOOGLE_API_KEY=your_google_api_key_here

# Cohere API Key
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# LiteLLM Configuration (Multi-Provider LLM Support)
# =============================================================================

# Enable/disable LiteLLM automatic fallback
LITELLM_FALLBACK_ENABLED=true

# Enable/disable LiteLLM cost tracking
LITELLM_COST_TRACKING=true

# Enable verbose logging for LiteLLM (debugging)
LITELLM_VERBOSE=false

# Primary providers to use (comma-separated priority list)
# Options: openai, anthropic, google, cohere, replicate, together_ai, etc.
LITELLM_PROVIDERS=openai,anthropic,google

# Default model for text generation
LITELLM_DEFAULT_TEXT_MODEL=gpt-3.5-turbo

# Default model for image generation
LITELLM_DEFAULT_IMAGE_MODEL=dall-e-3

# Default model for vision tasks
LITELLM_DEFAULT_VISION_MODEL=gpt-4-turbo

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://agentswarm:agentswarm@localhost:5432/agentswarm

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis host (alternative to URL)
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# =============================================================================
# Worker Configuration
# =============================================================================

# Enable autonomous mode for workers
AUTONOMOUS_MODE=true

# Enable automatic error fixing
AUTO_FIX=true

# Enable automatic PR merging
AUTO_MERGE=true

# Check interval in seconds
CHECK_INTERVAL=60

# Number of retry attempts for failed operations
RETRY_ATTEMPTS=5

# Total number of tools to develop
TOOLS_TO_DEVELOP=61

# Minimum test coverage percentage
MIN_TEST_COVERAGE=80

# Enable automatic documentation generation
AUTO_DOCUMENT=true

# =============================================================================
# Team Configuration
# =============================================================================

# Team identifier
TEAM_ID=team1

# Team name
TEAM_NAME=development

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Dashboard server port
DASHBOARD_PORT=8080

# Dashboard auto-refresh interval in seconds
DASHBOARD_AUTO_REFRESH=30
